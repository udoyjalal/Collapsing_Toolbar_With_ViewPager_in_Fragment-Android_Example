<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/smokingHabit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smoking Habits"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

        </TextView>

        <TextView
            android:id="@+id/smokingHabitId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:gravity="end">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alcoholConsumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alcohol consumption"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:layout_weight="1">

        </TextView>

        <TextView
            android:id="@+id/alcoholConsumptionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:gravity="end">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activityLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity level"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:layout_weight="1">

        </TextView>

        <TextView
            android:id="@+id/activityLevelId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:gravity="end">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/foodPreference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Preference"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:layout_weight="1">

        </TextView>

        <TextView
            android:id="@+id/foodPreferenceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:gravity="end">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occupation"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_weight="1">

        </TextView>

        <TextView
            android:id="@+id/occupationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:gravity="end">

        </TextView>

    </LinearLayout>

</LinearLayout>